//  SignIn
//---------------------------------------------------------

.sign-in 
  margin-top 90px
  max-width 300px


.sign-in__heading 
  margin-bottom 36px
  font-size 5em
  font-weight 300
  text-align center


.sign-in__button 
  margin-bottom 10px
  border 2px solid lighten(grey, 90%)
  background none
  text-decoration none
  width 100%
  height 48px
  font-family inherit
  font-size rem(18px)
  line-height 48px
  color blue

  &:hover, &:focus
    border-color blue
    outline 0
  
